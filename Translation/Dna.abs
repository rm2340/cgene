module Dna;
export Gene, id, code;
export Nucleotide, A, C, G, U, nuc, stop;


data Gene = Gene(String id, List<Nucleotide> code);

// adenine, cytosine, guanine, uracil
data Nucleotide = A | C | G | U;

def Nucleotide nuc() =
    case random(4) {
        0 => A;
        1 => C;
        2 => G;
        3 => U;
    };

